    "@babel/plugin-syntax-typescript": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/traverse": "^7.28.0",
    "commander": "^14.0.0",
    "esbuild": "^0.25.6"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.18.0",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^22.0.0",
    "mock-fs": "^5.5.0",
    "prettier": "^2.8.0",
    "typescript": "^5.8.3"
