{
  "name": "@christiango/unbarrel",
  "version": "0.0.1",
  "description": "Utilities for optimizing barrel files",
  "main": "lib/index.js",
  "bin": {
    "unbarrel": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild ./src/cli.ts --bundle --platform=node --outfile=dist/cli.js",
